<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.vic.networkchange_broadcastreceiver.MainActivity"
    android:gravity="center">

    <TextView
        android:id="@+id/helloworld"
        android:text="Hello World !"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/smileface"
        android:text=":)"
        android:textSize="60dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/helloworld"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/network_status"
        android:text="Network Stutus:"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/smileface"
        android:layout_marginTop="30dp" />
    <Button
        android:text="Send Broadcast"
        android:id="@+id/sendBroadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/network_status"
        android:layout_marginTop="20dp"/>
</RelativeLayout>
